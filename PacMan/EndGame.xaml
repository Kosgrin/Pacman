<Window x:Class="PacMan.EndGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PacMan"
        mc:Ignorable="d"
        Title="PacMan"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ResizeMode="NoResize"
        Background="Black"
        Width="525"
        Height="700" >
    <Canvas Name="GameCanvas">
        <Button  Canvas.Left="180" Canvas.Top="269" Width="163" Click="Button_Click" Height="48" >
            <Button.Background>
                <ImageBrush ImageSource="Images/StartMenu/Retry.png"/>
            </Button.Background>
        </Button>
        <Image Height="210" Source="Images/StartMenu/YouDied.png" Canvas.Top="37" Width="508" RenderTransformOrigin="0.5,0.5"/>
        <Button  Canvas.Left="180" Canvas.Top="374" Width="163" Click="Button_Click_Exit" Height="48" >
            <Button.Background>
                <ImageBrush ImageSource="Images/StartMenu/Exit.png"/>
            </Button.Background>
        </Button>


    </Canvas>
</Window>
